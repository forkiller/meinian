<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.dao.TravelGroupDao">

    <insert id="add">
        <!--在新增SQL语句之后执行select last_insert_id(), 返回int类型的值，封装到travelGroup中的id属性中-->
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into t_travelgroup()
        values (null,#{code}, #{name}, #{helpCode}, #{sex}, #{remark}, #{attention})
    </insert>

    <insert id="setCheckGroupAndCheckItem" parameterType="map">
        insert into t_travelgroup_travelitem
        values (#{travelGroupId}, #{travelItemId})
    </insert>

    <update id="edit" parameterType="travelGroup">
        update t_travelgroup
        <set>
            <if test="code != null and code.length > 0">
                code=#{code},
            </if>
            <if test="name != null and name.length > 0">
                name=#{name},
            </if>
            <if test="helpCode != null and helpCode.length > 0">
                helpCode=#{helpCode},
            </if>
            <if test="sex != null and sex.length > 0">
                sex=#{sex},
            </if>
            <if test="remark != null and remark.length > 0">
                remark=#{remark},
            </if>
            <if test="attention != null and attention.length > 0">
                attention=#{attention}
            </if>
        </set>
        where id=#{id}
    </update>


    <delete id="deleteTravelGroupAndTravelItemByTravelGroupId">
        delete
        from t_travelgroup_travelitem
        where travelgroup_id = #{travelGroupId}
    </delete>


    <select id="findPage" resultType="com.atguigu.pojo.TravelGroup">
        select * from t_travelgroup
        <where>
            <!--在 mybatis里面如果是一个参数，参数名字就 value-->
            <if test="value!=null and value.length>0">
                name like "%"#{value}"%" or code=#{value}
            </if>
        </where>
    </select>
    <select id="findById" resultType="com.atguigu.pojo.TravelGroup">
        select *
        from t_travelgroup
        where id = #{id}
    </select>


    <select id="findTravelItemIdByTravelgroupId" parameterType="integer" resultType="com.atguigu.pojo.TravelGroup">
        select travelitem_id
        from t_travelgroup_travelitem
        where travelgroup_id = #{id}
    </select>

    <resultMap id="findTravelgroupsBySetmealIdResultMap" type="com.atguigu.pojo.TravelGroup">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="helpCode" column="helpCode"/>
        <result property="sex" column="sex"/>
        <result property="remark" column="remark"/>
        <result property="attention" column="attention"/>

        <collection property="travelItems" column="id"
                    select="com.atguigu.dao.TravelItemDao.findTravelItemsByTravelgroupId">

        </collection>
    </resultMap>
    <!--List<Integer> findTravelItemIdByTravelgroupId(Integer setmealId)-->
    <!--
    select *
        from t_travelgroup
        where id in (select travelgroup_id
                     from t_setmeal_travelgroup
                     where setmeal_id = #{setmealId});
    -->
    <select id="findTravelgroupsBySetmealId" parameterType="integer" resultMap="findTravelgroupsBySetmealIdResultMap">
        select tr.*
        from t_travelgroup tr,
             t_setmeal_travelgroup tst
        where tr.id = tst.travelgroup_id
          and tst.setmeal_id = #{setmealId};
    </select>


    <select id="findAll" resultType="com.atguigu.pojo.TravelGroup">
        select *
        from t_travelgroup alias
    </select>
    <select id="findTravelGroupsById" resultType="com.atguigu.pojo.TravelGroup">
        select *
        from t_travelgroup
        where id = #{id};
    </select>

</mapper>


